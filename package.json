{
  "name": "Monux",
  "version": "0.9.3",
  "description": "Unoffical Monzo Client for Desktop",
  "private": true,
  "main": "src/app.ts",
  "repository": "https://github.com/robjtede/monux",
  "author": "robjtede",
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "!*.{js,ts,css}": [
      "eclint fix",
      "git add"
    ],
    "*.js": [
      "eclint fix",
      "prettier --write --no-semi --single-quote",
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "eclint fix",
      "prettier --write --no-semi --single-quote",
      "git add"
    ],
    "*.css": [
      "eclint fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "common-tags": "^1.4.0",
    "d3": "^4.10.0",
    "date-fns": "^2.0.0-alpha.1",
    "debug": "^2.6.8",
    "dexie": "^2.0.0-beta.11",
    "electron-compile": "^6.4.1",
    "electron-contextmenu-middleware": "^1.0.3",
    "electron-devtools-installer": "^2.2.0",
    "electron-image-menu": "^2.0.0",
    "electron-window-state": "^4.1.1",
    "img-exif": "^0.2.0",
    "keytar": "^4.0.3",
    "p-iteration": "^1.1.4",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4"
  },
  "devDependencies": {
    "@types/common-tags": "^1.2.5",
    "@types/d3": "^4.9.0",
    "@types/debug": "0.0.29",
    "@types/electron-config": "^0.2.1",
    "@types/electron-devtools-installer": "^2.0.2",
    "@types/electron-window-state": "^2.0.28",
    "@types/keytar": "^4.0.0",
    "@types/redux-actions": "^1.2.7",
    "@types/request-promise-native": "^1.0.6",
    "eclint": "^2.3.0",
    "electron-forge": "^3.0.5",
    "electron-prebuilt-compile": "1.7.4",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "tslib": "^1.7.1",
    "tslint": "^5.4.3",
    "typescript": "^2.4.2"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "zip"
        ],
        "darwin": [
          "zip"
        ]
      },
      "electronPackagerConfig": {
        "icon": "monux",
        "asar": true,
        "protocols": [
          {
            "schemes": [
              "monux"
            ],
            "name": "Monux"
          }
        ]
      }
    }
  }
}
